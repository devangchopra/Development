<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        
        <script src="https://kit.fontawesome.com/5ee11e4a83.js" 
        crossorigin="anonymous"></script>
        
        <link rel ="stylesheet" href="/css/home.css">
        <!--Assests : our own css-->
        <!-- Our css should be below every css so that i can override it -->

    </head>
    <body>

        <div>
            
            <div id="top-section">
                <i class="fas fa-address-book" id="title-icon"></i> &nbsp;
                <h1 id="heading">My Contacts</h1>
            </div>
            <div id="list-container">
                <ul id="list" style="list-style: none;">
                    <% for(let i of contact_list){%>
                        <li>
                            <span id="c-name"><%= i.name %></span>
                            <span id="c-name"><%= i.phone %></span>

                            <!--To delete a contact-->
                            <div class="delete-button">
                                <!--This was for string param / param-->
                                <!-- <a href="/delete-contact/<%= i.phone %>"> -->

                                <!--For query-->
                                <a href="/delete-contact/?phone=<%= i.phone %>">
                                <i class="fas fa-window-close"></i>
                                </a>
                            </div>


                        </li>
                        <%} %>
                </ul>
            </div>
            <div id="form-container">
                <form action="/create-contact" method="post">
                    <input class="form-input" type="text" name="name" placeholder="Enter Name" required><br>
                    <input class="form-input" type="number" name="phone" placeholder="Enter Phone Number" required><br>
                    <button class="btn" type="submit">Add Contact</button>
    
                </form>
            </div>
        </div>
        <script type ="text/javascript" src ="js/home.js"></script>
    
    </body>
        
</html>